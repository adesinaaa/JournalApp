    android:shape="rectangle" android:padding="10dp">
    <solid android:color="#FFFFFF"/>
    <gradient
        android:centerY="0.2"
        android:startColor="#D3D3D3"
        android:centerColor="#65FFFFFF"
        android:endColor="#00FFFFFF"
        android:angle="270"
        />
